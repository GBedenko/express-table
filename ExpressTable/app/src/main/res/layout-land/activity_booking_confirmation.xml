<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.BookingConfirmationActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:text="Booking Confirmation:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="330dp"
        android:layout_height="191dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/bookingIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="115dp" />

            <TextView
                android:id="@+id/bookingIdValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345"
                android:textAlignment="textEnd"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="115dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/bookingNumberOfPeopleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of People:"
                tools:layout_editor_absoluteX="204dp"
                tools:layout_editor_absoluteY="115dp" />

            <TextView
                android:id="@+id/bookingNumberOfPeopleValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textAlignment="textEnd"
                tools:layout_editor_absoluteX="204dp"
                tools:layout_editor_absoluteY="115dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/bookingRestaurantTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant:"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="158dp" />

            <TextView
                android:id="@+id/bookingRestaurantValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown"
                android:textAlignment="textEnd"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="158dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/bookingTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time:"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="209dp" />

            <TextView
                android:id="@+id/bookingTimeValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:00"
                android:textAlignment="textEnd"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="209dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/bookingTableNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Table Number:"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="311dp" />

            <TextView
                android:id="@+id/bookingTableNumberValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="42"
                android:textAlignment="textEnd"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="311dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/bookingDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="256dp" />

            <TextView
                android:id="@+id/bookingDateValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/1970"
                android:textAlignment="textEnd"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="256dp" />
        </TableRow>

    </TableLayout>


</android.support.constraint.ConstraintLayout>